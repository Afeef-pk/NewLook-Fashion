	<script src="assets/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script>
		$('#myForm').submit(function (event) {
			event.preventDefault();
			var email = $('input[name="email"]').val();
			var msg = $('textarea[name="msg"]').val();
			$.ajax({
				url: '/contact',
				method: 'POST',
				data: { email, msg },
				success: function (response) {
					if (response.sts) {
						$('#myForm').hide();
						$('#successMsg').show();
					} else {
						location.reload()
					}
				}
			});
		});
	</script>

<%- include('../layouts/header.ejs') %>

  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">


  <div
    style="background-image: url( 'https://wallpaperaccess.com/full/340434.png'  ) ; background-size: cover; "
    class="vh-100 d-flex align-items-center justify-content-center">
    <div class="form-gap"></div>
    <div class="container ">

      <div class="row ">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default  ">
            <div class="panel-body  ">
              <div class="text-center">
                <h3><i class="fa fa-lock fa-4x"></i></h3>
                <h2 class="text-center">Login With OTP</h2>
                <p>Please Enter six digit otp here</p>
                <div class="panel-body">

                  <form id="register-form" role="form" autocomplete="off" class="form" method="post">

                    <div class="form-group">
                      <div class="input-group">

                        <input id="email" name="otp" placeholder="Enter otp" class="form-control" type="text" required>
                      </div>
                    </div>
                    <% if(typeof message !=='undefined' ){ %>
                      <div class="alert alert-danger">
                        <strong>
                          <%= message %>
                        </strong>
                      </div>
                      </h5>
                      <% } %>
                        <div class="form-group">
                          <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Login"
                            type="submit">
                        </div>


                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../layouts/footer.ejs') %>
	<section class="checkout spad">
		<div class="container">
			<div class="checkout__form">

				<div class="row">
					<div class="col-lg-8 col-md-6">


						<h2>Select Address</h2>
						<br>
						<form action="/checkout" method="post">
							<div>
								<select id="Address">
									<% for(let i=0 ; i< user.address.length ; i++) {%>
										<option value="<%=[i] %>">
											<%= user.address[i].name%> , <%=user.address[i].pincode %>,
													<%=user.address[i].landmark %> ,<%= user.address[i].address%>
										</option>
										<% } %>
								</select>
							</div>
							<br><br>
							<form action="/checkout_address" method="post">

								<h6 class="checkout__title">Shipping Address</h6>
								<div class="row">
									<div class="col-lg-6">
										<div class="checkout__input">
											<p>Name<span>*</span></p>
											<input type="text" name="name">
										</div>
									</div>

								</div>

								<div class="checkout__input">
									<p>Landmark<span>*</span></p>
									<input type="text" placeholder="Street Address" class="checkout__input__add"
										name="landmark">

								</div>
								<div class="checkout__input">
									<p>Address<span>*</span></p>
									<input type="text" name="address">
								</div>

								<div class="row">
									<div class="col-lg-6">
										<div class="checkout__input">
											<p>Pincode<span>*</span></p>
											<input type="text" name="pincode">
										</div>
									</div>
									<div class="col-lg-6">
										<div class="checkout__input">
											<p>Phone<span>*</span></p>
											<input type="text" name="phone">
										</div>
									</div>
								</div>
								<button type="submit" class="btn btn-dark">Save</button>
							</form>
					</div>
					<div class="col-lg-4 col-md-6">
						<div class="checkout__order">
							<h4 class="order__title">Your order</h4>
							<div class="checkout__order__products">Product <span>Total</span></div>
							<ul class="checkout__total__products">
								<% for(let i=0 ; i< userCart.products.length ; i++) { %>
									<li>
										<%=[i+1]%>.<%= userCart.products[i].name %> x <%= userCart.products[i].quantity
													%><span>
														<%=userCart.products[i].price %>
													</span>
									</li>
									<% }; %>

							</ul>
							<ul class="checkout__total__all">
								<li>Subtotal <span>Rs <%= userCart.Total%></span></li>
								<li>Coupon Discount <span id="discountAmount">
										Rs <%= userCart.discountPrice%>
									</span></li>
								<li>Total <span id="payableamount">Rs <%= userCart.Total-userCart.discountPrice%></span></li>
							</ul>


							<div class="checkout__input__checkbox">
								<label for="payment">
									Cash On Delivery
									<input type="radio" id="payment" name="payment" value="cash on Delivery" required>
									<span class="checkmark"></span>
								</label>
							</div>
							<div class="checkout__input__checkbox">
								<label for="paypal">
									Paytm
									<input type="radio" id="paypal" name="payment" value="Paytm" required>
									<span class="checkmark"></span>
								</label>
							</div>
							<button type="submit" class="site-btn">PLACE ORDER</button>
							</form>
						</div>
					</div>

					<form action="/apply-code" method="post" id="couponForm">
						<div class="flex-w flex-m m-r-20 m-tb-5 " style="justify-content: flex-end;">

							<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text"
								name="couponcode" placeholder="Coupon Code">
							<input type="hidden" name="cart_id" value="<%= userCart._id %>">
							<div
								class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
								<button type="submit" id="removeCoupon">Apply coupon</button>
							</div>
							<br>
						</div>
							<p style="color: rgb(0, 0, 0);" id="couponmessage" class="text-end"></p>
					</form>
				</div>

			</div>
		</div>
	</section>
	<!-- Checkout Section End -->
	<script src="assets/vendor/jquery/jquery-3.2.1.min.js"></script>

	<script>

		$('#couponForm').submit(function (event) {
			// prevent the default form submission
			event.preventDefault();

			// get the coupon code from the input field
			var couponCode = $('input[name="couponcode"]').val();
			var cartID = $('input[name="cart_id"]').val();
			// send an AJAX request to apply the coupon
			$.ajax({
				url: '/apply-code',
				type: 'POST',
				data: { couponCode: couponCode, cartID: cartID },
				success: function (data) {
					// update the UI with the discount information
					
					if(data.minimum){
						$('#couponmessage').text(data.message);
					}
					else if (data.invalid) {
						$('#couponmessage').text(data.message);
					}
					else if (!data.removed) {
						$('#discountAmount').text('Rs ' + data.discountAmount);
						$('#payableamount').text('Rs ' + data.afterdiscount);
						$('#removeCoupon').text('Remove Coupon');
						$('#couponmessage').text(data.message);

					} else {
						location.reload()
					}
				}
			});
		});


	</script>



